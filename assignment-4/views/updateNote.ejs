<!-- Form to update a new note with description and status -->
<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Update a note</h1>
  <div class="col-lg-6 mx-auto">
    <form action="/notes/<%= note._id %>" method="POST">
      <!-- add an input for title -->
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <!-- if title is present set input with title  -->
        <input type="text" class="form-control" name="title" placeholder="Title" value="<%= note.title %>" required>

      </div>
      <div class="form-group">
        <label for="data">Description</label>
        <textarea class="form-control" id="data" name="data" rows="8"><%= note.data %></textarea>
      </div>
      <div class="form-group mt-5">
        <label for="status">Status</label>
        <select class="form-control" id="status" name="status">
          <option value="public" <% if (note.status==='public' ) { %> selected <% } %>>public</option>
          <option value="private" <% if (note.status==='private' ) { %> selected <% } %>>private</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary mt-5">Update note</button>
    </form>
  </div>